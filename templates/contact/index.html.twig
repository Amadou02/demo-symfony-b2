{% extends 'base.html.twig' %}

{% block title %}
	Contact
{% endblock %}

{% block body %}
	<div class="container" id="contact-wrapper">
		<div class="row justify-content-center">
			<div class="col-md-7">
				<h1 class="display-3">Nous contacter</h1>
				<form action="{{ path('app_contact') }}" method="post">
					<div class="mb-3">
						<label for="email" class="form-label">Votre email</label>
						<input class="form-control" type="email" name="email" id="email">
					</div>
					<div class="mb-3">
						<label for="subject" class="form-label">Votre email</label>
						<input class="form-control" type="text" name="subject" id="subject">
					</div>
					<div class="mb-3">
						<label for="message" class="form-label">Votre email</label>
						<textarea class="form-control" name="message" id="message" cols="30" rows="10"></textarea>
					</div>
					<div>
						<button class="btn btn-dark btn-lg" type="submit">Envoyer</button>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
